---
import "@fontsource/inter/variable.css";
import Header from "~/components/layout/header.astro";
import Splash from "~/components/splash/splash.astro";
import Gallery from "~/components/gallery/gallery";
import "~/styles/index.css";
import About from "~/components/about.astro";
import Team from "~/components/team.astro";
import ContentSection from "~/components/layout/content-section.astro";
import Logos from "~/components/logos.astro";
import Exhibition from "~/components/exhibition.astro";

const { generator, site } = Astro;
const title = "Collective Dreamer";
const description =
  "Collective Dreamer is an interactive installation in which the confrontation with the collective subconscious of all participants becomes possible. Inside a dome, the last dream can be whispered to an abstract figure. All inputs merge into a continuously dreaming subconscious, whose dreams become visible live as a projection on the inside of the dome.";
---

<!DOCTYPE html>
<html lang="en" class="h-full motion-safe:scroll-smooth" data-theme="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" type="image/svg+xml" />
    <meta name="generator" content={generator} />
    <meta
      name="google-site-verification"
      content="6r568haDoRsacJv1Vux5PEadpVrufyPivWlx5Nfy8cs"
    />

    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta
      name="image"
      property="og:image"
      content="https://i.ibb.co/Dz1TcJR/AI-Dome2.jpg"
    />
    <meta name="description" property="og:description" content={description} />
    <meta property="og:image:width" content="640" />
    <meta property="og:image:height" content="360" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@collectivedreamer" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <title>Collective Dreamer</title>

    <!-- initialize theme -->
    <script is:inline>
      const themeSaved = localStorage.getItem("theme");

      if (themeSaved) {
        document.documentElement.dataset.theme = themeSaved;
      } else {
        const prefersDark = window.matchMedia(
          "(prefers-color-scheme: dark)"
        ).matches;
        document.documentElement.dataset.theme = prefersDark ? "dark" : "light";
      }

      window
        .matchMedia("(prefers-color-scheme: dark)")
        .addEventListener("change", (event) => {
          if (!localStorage.getItem("theme")) {
            document.documentElement.dataset.theme = event.matches
              ? "dark"
              : "light";
          }
        });
    </script>
  </head>
  <body
    class="h-full overflow-x-hidden bg-default text-default text-base selection:bg-secondary selection:text-white"
  >
    <Header />
    <Splash />
    <div class="space-y-24 px-8 py-16">
      <Logos />
      <!-- <Exhibition /> -->
      <About />
      <Team />
      <ContentSection title="Galery" id="gallery">
        <p class="pb-4 font-mono lowercase text-sm">
          Photos by Bartosz Górka and Manuel Lübers
        </p>
        <Gallery client:only="react" />
      </ContentSection>
    </div>
  </body>
</html>
